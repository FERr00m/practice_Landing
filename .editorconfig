root = true

[*]
charset = utf-8
indent_style = tab
tab_width=2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,svg}]
indent_style = tab
indent_style = tab

[*.js]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

# сторонние библиотеки или минифицированные файлы, лучше не трогать
[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
